<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/parentClicked"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/icRemove">
            <ImageView
                android:id="@+id/pokeImage"
                android:layout_width="70dp"
                android:layout_marginStart="15dp"
                android:layout_height="70dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <com.pokedroid.common.fonts.CustomTextView
                android:id="@+id/writeNameText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="15dp"
                android:ellipsize="end"
                android:letterSpacing="0.04"
                android:maxLines="2"
                android:text="Daffa Naufal Rachamat"
                android:textColor="@android:color/black"
                android:textSize="17sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/pokeImage"
                app:layout_constraintTop_toTopOf="@+id/pokeImage"
                app:thinText="semibold" />
            <com.pokedroid.common.fonts.CustomTextView
                android:id="@+id/nameText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:text="bulbusara"
                app:layout_constraintStart_toStartOf="@id/writeNameText"
                app:layout_constraintTop_toBottomOf="@id/writeNameText"
                app:layout_constraintEnd_toEndOf="@id/writeNameText"/>
            <com.pokedroid.common.fonts.CustomTextView
                android:id="@+id/heightText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:text="Height : 16 m"
                app:layout_constraintStart_toStartOf="@id/nameText"
                app:layout_constraintEnd_toEndOf="@id/nameText"
                app:layout_constraintTop_toBottomOf="@id/nameText"/>
            <com.pokedroid.common.fonts.CustomTextView
                android:id="@+id/weightText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:text="Weight : 69 kg"
                android:layout_marginBottom="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/heightText"
                app:layout_constraintEnd_toEndOf="@id/heightText"
                app:layout_constraintTop_toBottomOf="@id/heightText"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/icRemove"
            android:layout_width="60dp"
            android:layout_height="0dp"
            android:paddingTop="25dp"
            android:paddingBottom="25dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@drawable/bg_remove"
            app:srcCompat="@drawable/ic_remove_white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>